<% include ../partials/header %>
                        <ul class="nav navbar-nav">
                            <li><a id="graphs" href="/">Gráficos</a></li>
                            <li class="active"><a id="states" href="/list">Estados</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="panel panel-default list-panel">
                    <div class="row add-row">
                        <a href='/new'>
                            <span class="glyphicon glyphicon-plus"></span>
                            Adicionar Estado
                        </a>
                    </div>
                    <div class="row list-table">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Estado</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (var i in data) { %>
                                    <tr>
                                        <td>
                                            <a href='/show/<%= data[i].id %>'><%= data[i].name%></a>
                                        </td>
                                        <td class="text-center">
                                            <a href='/show/<%= data[i].id %>'><span class="glyphicon glyphicon-eye-open"></span></a>
                                            <a href='/edit/<%= data[i].id %>'><span class="glyphicon glyphicon-pencil"></span></a>
                                            <a href='/delete/<%= data[i].id %>'><span class="glyphicon glyphicon-trash"></span></a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

<% include ../partials/footer %>
